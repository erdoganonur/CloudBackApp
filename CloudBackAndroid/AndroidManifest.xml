<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cloudback.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconi"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cloudback.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cloudback.activity.LoginOrRegisterActivity"
            android:label="@string/title_activity_login_or_register" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cloudback.activity.MainActivity" />
        </activity>
        <activity android:name="cloudback.activity.RegisterActivity" >
        </activity>
        <activity
            android:name="cloudback.activity.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="cloudback.activity.BackupActivity"
            android:label="@string/title_activity_backup" >
        </activity>
        <activity
            android:name="cloudback.activity.RestoreActivity"
            android:label="@string/title_activity_restore" >
        </activity>
        <activity
            android:name="cloudback.activity.BackupMultimediaActivity"
            android:label="@string/title_activity_backup_multimedia" >
        </activity>
        <activity
            android:name="cloudback.activity.BackupListActivity"
            android:label="@string/title_activity_backup_list" >
        </activity>
        <activity
            android:name="cloudback.activity.RestoreMultimediaActivity"
            android:label="@string/title_activity_restore_multimedia" >
        </activity>
    </application>

</manifest>
